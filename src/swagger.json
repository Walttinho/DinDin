  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Usuario": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "description": "O nome do usuário."
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "O endereço de e-mail do usuário."
          },
          "senha": {
            "type": "string",
            "description": "A senha do usuário."
          }
        },
        "required": ["nome", "email", "senha"]
      },
      "Transacao": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "O Id da transação."
          },
          "descricao": {
            "type": "string",
            "description": "A descrição da transação."
          },
          "valor": {
            "type": "integer",
            "description": "O valor da transação."
          },
          "data": {
            "type": "string",
            "format": "date",
            "description": "A data da transação (no formato 'YYYY-MM-DD')."
          },
          "categoria_id": {
            "type": "integer",
            "description": "O ID da categoria da transação."
          },
          "usuario_id": {
            "type": "integer",
            "description": "O ID da usuário da transação."
          },

          "tipo": {
            "type": "string",
            "enum": ["entrada", "saida"],
            "description": "O tipo da transação (entrada ou saída)."
          },
          "categoria_nome": {
            "type": "string",
            "description": "A descrição da categoria da transação."
          }
        },
        "required": ["tipo", "descricao", "valor", "data", "categoria_id"]
      },
      "Categorias": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "O ID da categoria da transação."
          },
          "descricao": {
            "type": "string",
            "description": "Nome da categoria da transação."
          }
        }
      },
      "Erro": {
        "type": "object",
        "properties": {
          "mensagem": {
            "type": "string",
            "description": "Mensagem de erro."
          }
        }
      }
    }
  }
